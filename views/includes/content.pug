<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      each item in content 
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <div class="card-body">
              <p class="card-text">!{item.contentCode}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="main/#{item._id}" class="btn btn-sm btn-outline-secondary">查看</a>
                </div>
                //- <small class="text-muted">!{String(item.meta.updateAt)}分钟</small>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>